    "docs:clean": "node ./docs/cleanup-deploy.js"
  },
  "devDependencies": {
    "vuepress": "1.7.1",
    "@types/crypto-js": "^4.0.1",
    "file-loader": "^6.2.0",
    "fs-extra": "^9.0.1",
    "path": "^0.12.7",
    "prompts": "^2.4.0",
    "terser-webpack-plugin": "^5.0.3",
    "ts-loader": "^8.0.7",
    "typedoc": "0.17.7",
    "typedoc-plugin-markdown": "2.2.17",
    "typescript": "^4.0.5",
    "webpack": "^5.3.2",
    "webpack-cli": "^4.1.0"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "crypto-js": "^4.0.0",
    "localforage": "^1.9.0",
    "moment": "^2.29.1",
    "vue": "^2.6.12",
    "vue-class-component": "^7.2.6",
    "vue-i18n": "^8.22.1",
    "vue-property-decorator": "^9.0.2",
    "vue-router": "^3.4.8",
    "vuex": "^3.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomhash/everflow.git"
