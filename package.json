{
  "name": "everflow",
  "version": "4.0.0-beta.1",
  "description": "Everflow is a fully modular framework for VueJS to make code reuse easier.",
  "main": "./dist/everflow.js",
  "typings": "./dist/types/everflow.d.ts",
  "author": "AtomHash",
  "scripts": {
    "build": "webpack",
    "docs:build": "typedoc && cd ./docs/dist && vuepress build && cd ../../",
